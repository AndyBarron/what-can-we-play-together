{ Link } = require 'react-router-dom'
LinkOut = require './LinkOut'
React = require 'react'
styles = require './styles/FriendProfile'

module.exports = ({friend, url, selected}) =>
  className = styles.component +
    if selected then ' ' + styles.selected else ''
  <div
    className={className}
    title={friend.name}>
    <Link className='plain' to={url}>
      <div><img src={friend.avatarUrl} /></div>
      <div className='info'>
        <strong>{friend.name}</strong>
        <div className='help'>{
          if friend.realName then "(#{friend.realName})" else '\xa0'
        }</div>
      </div>
    </Link>
    <div><LinkOut url={friend.profileUrl}>Profile</LinkOut></div>
  </div>
