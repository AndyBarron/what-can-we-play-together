React = require 'react'
sharedUtils = require 'shared/utils'
styles = require './styles/GameList'

module.exports = ({games}) =>
  games = do games.slice
  games = games.sort (a, b) => sharedUtils.strcmpCaseInsensitive a.name, b.name
  <div className={styles.component}>
    <div>{
      'You and the selected user(s) have the following games in common:'
    }</div>
    <div className={styles.listWrapper}>
      <div className={styles.list}>{
        if games.length
          games.map (game) =>
            <div className={styles.game} key={game.id} title={game.name}>
              <div>
                <div
                  className={styles.logo}
                  style={{backgroundImage: "url(#{game.logoUrl})"}}>
                </div>
              </div>
              <strong>{game.name}</strong>
            </div>
        else
          <div><br />{"None :-("}</div>
      }</div>
    </div>
  </div>
