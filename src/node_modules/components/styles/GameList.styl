.component
  text-align center

  .listWrapper
    display inline-block
    
  .list
    text-align center
    
  .game, .game *
    overflow hidden
    text-overflow ellipsis
    white-space nowrap
    
  .game
    box-sizing content-box
    display inline-block
    padding 1rem
    text-align center
    width 184px
    @media (max-width 1035px)
      width 138.75px
      padding 0.5rem
    
  .logo
    background-color #333
    background-size cover
    display inline-block
    height 69px
    width 184px
    @media (max-width 1035px)
      background-color #333
      background-size cover
      display inline-block
      height 51.75px
      width 138.75px
