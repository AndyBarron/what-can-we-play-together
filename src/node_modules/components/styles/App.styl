
:global {

  * {
    box-sizing: border-box;
  }

  html {
    background-color: #111;
    font-size: 16px;
  }

  body {
    color: #eee;
    font-family: 'Helvetica Neue', Helvetica, sans-serif;
    padding: 1rem;
  }

  main {
    margin: 0 auto;
    margin-bottom: 1.5rem;
    text-align: center;
  }

  h1, h2, h3 {
    margin: 0;
  }

  main section:not(.plain) {
    background-color: #222;
    margin-top: 1.5rem;
    padding: 1rem;
  }

  input[type=text] {
    color: #eee;
    border: 1px solid #555;
    background-color: #222;
    padding: 0.5em;
    text-align: center;
  }
  
  a:link:not(.plain), a:hover:not(.plain), a:active:not(.plain), a:visited:not(.plain) {
    color: white;
  }

  a:link.plain, a:hover.plain, a:active.plain, a:visited.plain {
    color: inherit;
    text-decoration: none;
  }

  .help {
    color: #ccc;
    font-size: 0.8em;
  }

  small {
    color: #ccc;
    font-size: 0.5em;
  }

  button {
    background-color: transparent;
    background-image: none;
    border: none;
    color: inherit;
    cursor: pointer;
  }

}
