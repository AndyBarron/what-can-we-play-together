
.component
  display inline-block
  padding 1rem
  text-align center
  width 9rem
  @media (max-width: 1035px)
    width 7rem
    font-size 0.9rem

  &.selected
    background-color black

  img
    height 7rem
    width 7rem
    @media (max-width: 1035px)
      height 5rem
      width 5rem

  *
    overflow hidden
    text-overflow ellipsis
    white-space nowrap
