react = require 'react'
{ a } = require 'client/tags'

EXTERNAL_LINK_REGEX = /^https?:\/\//

module.exports = ({children, className, hideIcon, plain, url, sameTab}) =>
  children = (children.concat [' \uD83E\uDC65']) unless hideIcon or plain
  a
    className: "#{className or ''} #{if plain then 'plain' else ''}".trim() || null
    href: url
    rel: 'noopener'
    target: if sameTab then null else '_blank'
    children...
