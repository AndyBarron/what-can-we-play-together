react = require 'react'
h = react.createElement

EXTERNAL_LINK_REGEX = /^https?:\/\//

module.exports = ({children, className, hideIcon, plain, url, sameTab}) =>
  children = (children.concat [' \u2197']) unless hideIcon or plain
  className = "#{className or ''} #{if plain then 'plain' else ''}"
  h 'a',
    className: className
    href: url
    rel: 'noopener'
    target: '_blank' unless sameTab
    children...
