{ Link } = require 'react-router-dom'
LinkOut = require './LinkOut'
react = require 'react'
{ div, h2, img, createElement } = require 'client/tags'

module.exports = ({user}) =>
  { avatarUrl, name, profileUrl, realName } = user
  div className: 'component-user-profile',
    div null,
      img src: avatarUrl
    div className: 'info',
      h2 null, name
      div className: 'help', if realName then "(#{realName})" else '\xa0'
      div null,
        createElement LinkOut, url: profileUrl, 'Profile'
      div null,
        createElement Link, to: '/', 'Log out'
