{ Link } = require 'react-router-dom'
LinkOut = require './LinkOut'
react = require 'react'
h = react.createElement

module.exports = ({user}) =>
  { avatarUrl, name, profileUrl, realName } = user
  h 'div', className: 'component-user-profile',
    h 'div', null,
      h 'img', src: avatarUrl
    h 'div', className: 'info',
      h 'h2', null, name
      h 'div', className: 'help', if realName then "(#{realName})" else '\xa0'
      h 'div', null,
        h LinkOut, url: profileUrl, 'Profile'
      h 'div', null,
        h Link, to: '/', 'Log out'
