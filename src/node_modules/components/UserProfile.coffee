{ Link } = require 'react-router-dom'
LinkOut = require './LinkOut'
React = require 'react'
styles = require './styles/UserProfile'
h = React.createElement

module.exports = ({user}) =>
  { avatarUrl, name, profileUrl, realName } = user
  h 'div', className: styles.component,
    h 'div', null,
      h 'img', src: avatarUrl
    h 'div', className: styles.info,
      h 'h2', null, name
      h 'div', className: 'help', if realName then "(#{realName})" else '\xa0'
      h 'div', null,
        h LinkOut, url: profileUrl, 'Profile'
      h 'div', null,
        h Link, to: '/', 'Log out'
