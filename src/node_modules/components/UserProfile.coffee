{ Link } = require 'react-router-dom'
LinkOut = require './LinkOut'
react = require 'react'
h = react.createElement

module.exports = ({user}) =>
  h 'div.component-user-profile', null,
    h 'div', null
      h 'img', src: user.avatarUrl
    h 'div.info', null,
      h 'h2', null, user.name
      h 'div.help', null, user.realName or '\xa0'
      h 'div', null,
        h LinkOut, url: user.profileUrl, 'Profile'
      h 'div', null,
        h Link, to: '/', 'Log out'
